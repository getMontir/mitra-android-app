<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GetMontirMitra" parent="Base.Theme.GetMontirMitra"/>

    <style name="Base.Theme.GetMontirMitra" parent="Base.Theme.MaterialThemeBuilder">
        <item name="fontFamily">@font/dm_sans</item>

        <!--Material color attributes (light theme) -->
        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <!--selection controls.-->
        <item name="colorPrimary">@color/secondaryColor</item>
        <item name="colorPrimaryVariant">@color/secondaryDarkColor</item>
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>

        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red_600</item>

        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.GetMontirMitra.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.GetMontirMitra.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.GetMontirMitra.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.GetMontirMitra.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.GetMontirMitra.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.GetMontirMitra.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.GetMontirMitra.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.GetMontirMitra.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.GetMontirMitra.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.GetMontirMitra.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.GetMontirMitra.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.GetMontirMitra.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.GetMontirMitra.Overline</item>

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.GetMontirMitra.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.GetMontirMitra.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.GetMontirMitra.LargeComponent</item>

        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        <item name="bottomSheetDialogTheme">@style/Widget.GetMontirMitra.BottomSheetDialog</item>
        <item name="navigationViewStyle">@style/Widget.GetMontirMitra.NavigationView</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>

        <item name="materialButtonStyle">@style/Widget.GetMontirMitra.Button</item>
        <item name="textInputStyle">@style/Widget.GetMontirMitra.TextInputLayout</item>
        <item name="checkboxStyle">@style/Widget.GetMontirMitra.CheckBox</item>

    </style>

    <style name="Base.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?attr/colorControlHighlight</item>
    </style>

    <style name="Theme.GetMontirMitra.Splash">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/black_blue_900</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/black_blue_900</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?android:attr/colorBackground</item>
    </style>

    <style name="Theme.GetMontirMitra.Auth">
        <item name="homeAsUpIndicator">@drawable/abc_ic_clear_material</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">#0B2031</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">#0B2031</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?android:attr/colorBackground</item>
        <item name="toolbarStyle">@style/Widget.GetMontirMitra.Toolbar.White</item>
    </style>

    <style name="Theme.GetMontirMitra.Auth.Inverted">
        <item name="homeAsUpIndicator">@drawable/abc_ic_clear_material</item>
        <item name="toolbarStyle">@style/Widget.GetMontirMitra.Toolbar.Inverted</item>
        <item name="actionOverflowButtonStyle">@style/Widget.GetMontirMitra.ActionButton.Overflow</item>
    </style>

</resources>